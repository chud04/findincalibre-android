<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.example.findincalibre"
      android:versionCode="1"
      android:versionName="1.0"
      >
      <!-- adding this bit is what made the app fill the entire screen! -->
      <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="false" />
      
    <application android:label="@string/app_name" android:icon="@drawable/calibre_icon">
        <activity android:name=".FindInCalibreMain"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".FindForm" />
    </application>
</manifest> 
